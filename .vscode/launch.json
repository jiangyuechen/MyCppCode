{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Program Files (x86)/gcc/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "task g++",
        },
        {
            "name": "Python Launch",
            "type": "python",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.py",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "JS Launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.js",
        },
    ]
}